<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Future_Date</fullName>
    <active>true</active>
    <description>When the user creates a record - Job position Open Due Date can not be in the past.</description>
    <errorConditionFormula>Open_Due_Date__c  &lt; TODAY()</errorConditionFormula>
    <errorDisplayField>Open_Due_Date__c</errorDisplayField>
    <errorMessage>Selected date in the past!</errorMessage>
</ValidationRule>
